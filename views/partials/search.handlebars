<div class='search-container text-center'>
    <form id='search' class='search-container__form'>
        <input type="text" id='food' placeholder="Search by food or UPC">
        <button type='submit' class='search-container__button'>Search</button>
    </form>
    
</div>

<script type='text/javascript'>


	$('#search').on('submit', function(event) {
		event.preventDefault()
		const food = $('#food').val();
		window.location = `/search/${food}`
	})

	$('#searchLink').attr('href', food);
</script>